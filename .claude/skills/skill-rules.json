{
  "version": "2.0.0",
  "metadata": {
    "created": "2025-11-19",
    "updated": "2026-02-16",
    "environment": "project-reference",
    "compatibility": ["claude-code-v2.1+"],
    "project": "claude-code-infrastructure-showcase"
  },
  "skills": {
    "general-development": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "low",
      "description": "General software development patterns and best practices",
      "promptTriggers": {
        "keywords": ["design pattern", "solid principles", "clean code", "coding standards"],
        "intentPatterns": [
          "what.*best practice.*for",
          "how.*should.*I.*structure",
          "design.*pattern.*for"
        ]
      }
    },
    "error-tracking": {
      "type": "observability",
      "enforcement": "warn",
      "priority": "high",
      "description": "Error tracking and monitoring setup with Sentry patterns",
      "promptTriggers": {
        "keywords": ["sentry", "captureException", "error tracking", "error monitoring", "performance tracking", "instrument.ts"],
        "intentPatterns": [
          "(setup|add|implement|configure).*sentry",
          "(setup|add|implement).*error.*tracking",
          "track.*error.*in.*production"
        ]
      }
    },
    "frontend-dev-guidelines": {
      "type": "guardrail",
      "enforcement": "block",
      "priority": "high",
      "description": "React/TypeScript best practices including MUI v7 compatibility and modern patterns",
      "promptTriggers": {
        "keywords": ["react component", "MUI", "Material-UI", "mui grid", "useSuspenseQuery", "tanstack router", "tsx component"],
        "intentPatterns": [
          "(create|build|add|implement).*react.*component",
          "(create|build|add|implement).*frontend.*page",
          "(style|design|layout).*component",
          "(fix|update|modify).*tsx",
          "MUI.*v7|Grid.*size"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/frontend/**/*.tsx",
          "**/web/**/*.tsx",
          "components/**/*.tsx",
          "pages/**/*.tsx"
        ],
        "pathExclusions": [
          "**/*.test.tsx",
          "**/*.spec.tsx"
        ]
      },
      "blockMessage": "Frontend Best Practices Required. Use Skill('frontend-dev-guidelines') before editing frontend components. MUI v7: Grid uses size={{}} prop, NOT xs/sm props. File: {file_path}",
      "skipConditions": {
        "sessionSkillUsed": true,
        "fileMarkers": ["@skip-validation"],
        "envOverride": "SKIP_FRONTEND_GUIDELINES"
      }
    },
    "api-development": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "API and backend development patterns for REST, GraphQL, and microservices",
      "promptTriggers": {
        "keywords": ["rest api", "graphql api", "api endpoint", "fastapi", "express router"],
        "intentPatterns": [
          "(create|implement|add).*api.*endpoint",
          "(create|implement|add).*graphql.*(query|mutation|resolver)",
          "(setup|configure).*api.*server"
        ]
      }
    },
    "backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Specific Node.js/Express/TypeScript patterns with BaseController, Prisma, Zod, and Sentry",
      "promptTriggers": {
        "keywords": ["BaseController", "Prisma", "Zod schema", "express middleware", "microservice architecture", "dependency injection", "unifiedConfig"],
        "intentPatterns": [
          "(create|add|implement).*controller",
          "(create|add|implement).*express.*route",
          "(create|add).*prisma.*(model|migration|query)",
          "(add|implement).*zod.*validation"
        ]
      }
    },
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": ["create skill", "skill-rules.json", "skill triggers", "hook system", "skill frontmatter", "skill activation"],
        "intentPatterns": [
          "(create|add|modify|build).*skill",
          "(how do|how does).*skill.*(work|trigger|activate)",
          "skill.*enforcement"
        ]
      }
    },
    "route-tester": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Testing authenticated API routes with JWT cookie-based auth",
      "promptTriggers": {
        "keywords": ["test route", "test endpoint", "test api", "route testing", "authenticated route", "JWT testing", "cookie auth"],
        "intentPatterns": [
          "(test|debug|verify).*authenticated.*route",
          "test.*api.*endpoint",
          "test.*with.*auth"
        ]
      }
    },
    "refactoring-patterns": {
      "type": "quality",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Code quality and refactoring analysis for duplication, code smells, and extraction candidates",
      "promptTriggers": {
        "keywords": ["refactor", "code duplication", "DRY violation", "code smell", "extract function", "extract class"],
        "intentPatterns": [
          "refactor.*this",
          "duplicate.*logic",
          "extract.*shared",
          "too much.*duplication"
        ]
      }
    },
    "managing-dev-docs": {
      "type": "productivity",
      "enforcement": "suggest",
      "priority": "critical",
      "description": "Dev docs management for tracking complex features across sessions",
      "promptTriggers": {
        "keywords": ["dev docs", "dev-docs", "devdocs", "committed", "commit this", "commit changes", "resume work", "continue feature", "where did we leave off"],
        "intentPatterns": [
          "(check|show|update|create).*dev.*doc",
          "resume.*work",
          "continue.*(feature|work|implementation)",
          "where.*(left off|we at|did we stop)",
          "(just|already|i've).*committed",
          "ready.*to.*commit",
          "go ahead.*commit",
          "(start|begin).*complex.*(task|feature|project)"
        ]
      }
    },
    "code-review-local": {
      "type": "quality",
      "enforcement": "warn",
      "priority": "high",
      "description": "Code review before committing. Per-commit: code-architecture-reviewer agent. Milestone: full 7-agent pipeline.",
      "promptTriggers": {
        "keywords": ["code review", "review code", "review changes", "review before commit", "review my code"],
        "intentPatterns": [
          "review.*(code|changes|implementation)",
          "ready.*for.*review",
          "before.*merge",
          "check.*before.*commit"
        ]
      },
      "warnMessage": "Code review recommended. Use code-architecture-reviewer agent for per-commit review, or code-review-local skill for thorough milestone reviews."
    },
    "php-backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "PHP backend development patterns",
      "promptTriggers": {
        "keywords": ["php", "phpunit", "phplib", "mongodb php", "php controller", "php model"],
        "intentPatterns": [
          "(create|add|implement|fix).*php",
          "(create|add).*php.*(route|endpoint|model|test)",
          "php.*backend"
        ]
      }
    },
    "mixed-stack-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "Development guidelines for mixed technology stacks",
      "promptTriggers": {
        "keywords": ["mixed stack", "polyglot", "multi-language project", "cross-stack"],
        "intentPatterns": [
          "multiple.*language",
          "mixed.*tech.*stack",
          "(frontend|backend).*different.*language"
        ]
      }
    }
  },
  "skipMechanisms": {
    "commentTriggers": [
      "// @skip-skill-check",
      "# skip-skill-check",
      "/* skip-skill-check */",
      "<!-- skip-skill-check -->"
    ],
    "envVars": {
      "CLAUDE_SKIP_SKILLS": "all",
      "CLAUDE_ENFORCEMENT_LEVEL": "suggest|warn|block"
    }
  },
  "enforcementSettings": {
    "defaultLevel": "suggest",
    "conflictResolution": "priority",
    "maxSuggestions": 3,
    "requireConfirmation": {
      "block": true,
      "warn": false,
      "suggest": false
    }
  }
}
