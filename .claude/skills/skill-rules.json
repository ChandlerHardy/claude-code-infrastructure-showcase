        "intentPatterns": [
          "do we have.*dev docs",
          "check.*dev docs",
          "are there.*dev docs",
          "any.*dev docs",
          "show.*dev docs",
          "resume.*work",
          "continue.*feature",
          "continue.*work",
          "what.*working on",
          "where.*left off",
          "what.*progress",
          "check.*progress",
          "got.*committed",
          "just.*committed",
          "i.*committed"
        ]
      }
    },
    "superpowers:requesting-code-review": {
      "type": "quality",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Request code review before committing to catch architectural issues",
      "promptTriggers": {
        "keywords": [
          "done",
          "complete",
          "finished",
          "commit",
          "ready",
          "merge",
          "push",
          "ship",
          "deploy"
        ],
        "intentPatterns": [
          "feature.*complete",
          "implementation.*done",
          "ready.*to.*commit",
          "ready.*for.*review",
          "ready.*to.*merge",
          "finished.*implementing",
          "completed.*task",
          "wrap.*up",
          "all.*set",
          "looks.*good"
        ]
      }
    }
  },
  "skipMechanisms": {
    "commentTriggers": [
      "// @skip-skill-check",
      "# skip-skill-check",
      "/* skip-skill-check */",
      "<!-- skip-skill-check -->"
    ],
    "envVars": {
      "CLAUDE_SKIP_SKILLS": "all",
      "CLAUDE_ENFORCEMENT_LEVEL": "suggest|warn|block"
    },
    "workspaceContext": {
      "skipInTests": true,
      "skipInDocs": true,
      "minProjectAge": "5m",
      "maxFileSize": "1MB"
    }
